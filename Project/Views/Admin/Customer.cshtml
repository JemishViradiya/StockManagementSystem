@{
}

@model IEnumerable<Customer>
    <head>
        <link rel="stylesheet" href="~/css/Style.css" />
    </head>
    <div class="container-main">
        <div class="features">
            <a asp-action="Index">Stocks</a>
            <a asp-action="Customer">Customer</a>
            <a asp-action="Order">Orders</a>

            <a asp-action="logout">Logout</a>

        </div>
        <div class="card">
            <table>
                <tr>
                    <th>
                        Customer Name
                    </th>
                    <th>
                        Customer Email
                    </th>
                    <th>
                        Customer Mobile Number
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.customer_name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.customer_email)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.contact_number)
                        </td>
                        <td>
                            <div class="actions">
                                <a asp-action="Update" asp-route-id="@item.customer_id">UPDATE</a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
