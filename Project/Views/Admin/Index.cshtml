

@model IEnumerable<Stock>
    <head>
        <link rel="stylesheet" href="~/css/Style.css" />
    </head>
<div class="container-main">
    <div class="features">

        <a asp-action="Customer">Customer</a>
        <a asp-action="Order">Orders</a>
        <a asp-action="Add">Add Stock</a>
        <a asp-action="logout">Logout</a>

    </div>
    <div class="card">
        <table>
            <tr>
                <th>
                    Stock Name
                </th>
                <th>
                    Stock Price
                </th>
                <th>
                    Stock Quantity
                </th>
                <th>
                    Actions
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.stock_name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.stock_price)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.stock_quantity)
                    </td>
                    <td>
                        <div class="actions">
                            <a asp-action="Modify" asp-route-id="@item.stock_id">Modify</a>
                            <a asp-action="Delete" asp-route-id="@item.stock_id">Delete</a>
                        </div>
                            </td>
                </tr>
            }

        </table>

    </div>
</div>
