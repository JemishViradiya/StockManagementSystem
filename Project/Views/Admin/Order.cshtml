@{
}
@model IEnumerable<Order>
    <head>
        <link rel="stylesheet" href="~/css/Style.css" />
    </head>
    <div class="container-main" style="width:70% !important; margin-left:15% !important">
        <div class="features">
            <a asp-action="Index">Stocks</a>
            <a asp-action="Customer">Customer</a>
            <a asp-action="Order">Orders</a>

            <a asp-action="logout">Logout</a>

        </div>
        <div class="card">

            <table>
                <tr>
                    <th>
                        Customer Name
                    </th>
                    <th>
                        Order Date
                    </th>
                    <th>
                        Stock Name
                    </th>
                    <th>
                        Stock Price
                    </th>
                    <th>
                        Order Quantity
                    </th>
                    <th>
                        Total Amount
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.customer.customer_name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.orderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.stock.stock_name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.stock.stock_price)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.totalAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.status)
                        </td>
                        <td>
                            <div class="actions">
                                @if (item.status == "Payment Pending")
                                {



                                    <a asp-action="ModifyOrder" asp-route-id="@item.id">Approve Order</a>
                                    <a asp-action="DeleteOrder" asp-route-id="@item.id">Delet Order</a>
                                }
                                else
                                {
                                    <a asp-action="DeleteOrder" asp-route-id="@item.id">Delet Order</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
