@{
}
<header>
    <link rel="stylesheet" href="~/css/login.css" />
</header>
<form action="login" method="post">
    <div class="container-main">
        <div class="card">
            <table>
                <tr>
                    <td>
                        Email Address
                    </td>
                    <td>
                        <input type="email" name="customer_email" placeholder="Enter email id" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Password
                    </td>
                    <td>
                        <input type="password" name="password" placeholder="Enter Password" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" value="LOGIN" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <a asp-action="Register">Don't you have account? Register</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
   
</form>
